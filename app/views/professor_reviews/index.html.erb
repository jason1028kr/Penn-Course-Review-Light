<p id="notice"><%= notice %></p>

<h1>Professor Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Professor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @professor_reviews.each do |professor_review| %>
      <tr>
        <td><%= professor_review.content %></td>
        <td><%= professor_review.professor %></td>
        <td><%= link_to 'Show', professor_review %></td>
        <td><%= link_to 'Edit', edit_professor_review_path(professor_review) %></td>
        <td><%= link_to 'Destroy', professor_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Professor Review', new_professor_review_path %>
